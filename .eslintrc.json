{
	"env": {
		"es2021": true,
		"node": true
	},
	"extends": ["eslint:recommended", "@hapi/eslint-config-hapi", "prettier"],
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module",
		"requireConfigFile": false,
		"babelOptions": {
			"plugins": ["@babel/plugin-syntax-import-assertions"],
			"babelrc": false,
			"configFile": false
		}
	},
	"rules": {
		"@hapi/hapi/scope-start": "off",
		"linebreak-style": ["error", "unix"],
		"no-console": "warn",
		"no-debugger": "warn",
		"no-tabs": ["error", { "allowIndentationTabs": true }]
	},
	"parser": "@babel/eslint-parser"
}
